<div class="row">
    <div class="col-xs-12"
        <h1>Make A Post</h1>
    </div>
</div>
<form action='#' id='post-form'>
    <textarea id='post-body' name="body" class="form-control" required></textarea>
    <div class='text-right'>
        <button type='submit'>Submit</button>
    </div>
</form>
<div id="posts">
    {{#each posts}}
        <div>{{this.body}}</div>
    {{/each}}
</div>
